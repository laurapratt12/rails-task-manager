<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><% @task.completed %></p>

<div id="options">
  <p id="delete">
    <%= link_to "Delete",
    task_path(@task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
  </p>

  <p id="edit">
    <%= link_to "Edit", edit_task_path %>
  </p>
</div>

 <hr>
  <%= link_to tasks_path do %>
    <i class="fa-solid fa-arrow-rotate-left"></i> Back to list
  <% end %>
